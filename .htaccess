# Prevent directory browsing
Options -Indexes

# Protect sensitive files
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Protect configuration files
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|sql|conf|config)$">
    Order allow,deny
    Deny from all
</FilesMatch>
